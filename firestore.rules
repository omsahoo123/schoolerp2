
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is signed in.
    function isSignedIn() {
      return request.auth != null;
    }

    // Allow public read access for notices, but only authenticated writes.
    match /notices/{noticeId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    // Allow public read access for hostel fees, but only authenticated writes.
    match /hostelFees/{feeId} {
      allow read: if true;
      allow write: if isSignedIn();
    }
    
    // Allow public read access for tuition fees, but only authenticated writes.
    match /fees/{feeId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    // Allow signed-in users to read and write to all other collections.
    // This is a broad rule for development and can be refined later
    // for more granular, role-based access control.
    match /{document=**} {
      allow read, write: if isSignedIn();
    }

    // This rule is overridden by the one above, but is a good example
    // of more specific user-based document access.
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }
  }
}
