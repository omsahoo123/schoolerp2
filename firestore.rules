
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is signed in.
    function isSignedIn() {
      return request.auth != null;
    }

    // This rule allows any client to read from any collection,
    // but only authenticated users can write. This is necessary because
    // the app's DataContext loads all collections on startup, even
    // for unauthenticated users on the login page.
    match /{path=**} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    // This rule is a good example of more specific user-based document access,
    // though it is currently superseded by the broader rule above.
    // You could tighten security later by restricting read access based on roles.
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }
  }
}
